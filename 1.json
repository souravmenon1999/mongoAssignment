[
    {
      "$lookup": {
        "from": "comments",
        "localField": "_id",
        "foreignField": "movie_id",
        "as": "comments"
      }
    },
    {
      "$project": {
        "_id": 0,
        "title": 1,
        "comments": {
          "$map": {
            "input": "$comments",
            "as": "comment",
            "in": {
              "name": "$$comment.name",
              "email": "$$comment.email",
              "text": "$$comment.text",
              "date": {
                "$dateToString": {
                  "format": "%Y-%m-%dT%H:%M:%S.%LZ",
                  "date": "$$comment.date"
                }
              }
            }
          }
        }
      }
    }
  ]
  